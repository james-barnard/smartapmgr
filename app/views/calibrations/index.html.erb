<p id="notice"><%= notice %></p>

<h1>Calibrations</h1>

<table class='table'>
  <thead>
    <tr>
      <th scope='row'>Machine</th>
      <th scope='row'>Meter number</th>
      <th scope='row'>Meter Constant</th>
      <th colspan="3" scope='row'></th>
    </tr>
  </thead>

  <tbody>
    <% @calibrations.each do |calibration| %>
      <tr>
        <td><%= calibration.machine.id %></td>
        <td><%= calibration.meter_number %></td>
        <td><%= calibration.constant %></td>
        <td><%= link_to 'Show', calibration %></td>
        <td><%= link_to 'Edit', edit_calibration_path(calibration) %></td>
        <td><%= link_to 'Destroy', calibration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Calibration', new_calibration_path %>
